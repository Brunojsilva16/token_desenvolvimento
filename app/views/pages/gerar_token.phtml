<!-- Script de Autocomplete Atualizado -->
<script>
    const inputNome = document.getElementById('nome_paciente');
    const inputCpf = document.getElementById('cpf_paciente');
    const inputResp = document.getElementById('nome_responsavel');
    const inputFin = document.getElementById('responsavel_financeiro');
    const datalist = document.getElementById('lista_pacientes');
    let timeout = null;

    inputNome.addEventListener('input', function() {
        const termo = this.value;

        clearTimeout(timeout);

        // Preencher ao selecionar do datalist
        const opcoes = datalist.options;
        for (let i = 0; i < opcoes.length; i++) {
            if (opcoes[i].value === termo) {
                // Pega os dados extras dos atributos data-*
                inputCpf.value = opcoes[i].getAttribute('data-cpf') || '';
                inputResp.value = opcoes[i].getAttribute('data-resp') || '';
                inputFin.value = opcoes[i].getAttribute('data-fin') || '';
                return;
            }
        }

        if (termo.length < 3) return;

        timeout = setTimeout(() => {
            fetch('<?= URL_BASE ?>/api/pacientes/busca?term=' + encodeURIComponent(termo))
                .then(response => response.json())
                .then(data => {
                    datalist.innerHTML = ''; 
                    data.forEach(p => {
                        const option = document.createElement('option');
                        option.value = p.nome;
                        
                        // Armazena dados extras
                        option.setAttribute('data-cpf', p.cpf || '');
                        option.setAttribute('data-resp', p.resp || ''); // Novo
                        option.setAttribute('data-fin', p.fin || '');   // Novo
                        
                        const extra = p.cpf ? ` (CPF: ${p.cpf})` : '';
                        option.label = p.origem === 'historico' ? `Histórico${extra}` : `Cadastrado${extra}`;
                        datalist.appendChild(option);
                    });
                });
        }, 300);
    });
</script>