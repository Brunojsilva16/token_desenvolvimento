<script>
    // --- 1. Script de Autocomplete (Versão Robusta com Mapa de Dados) ---
    const inputNome = document.getElementById('nome_paciente');
    const inputCpf = document.getElementById('cpf_paciente');
    const inputResp = document.getElementById('nome_responsavel');
    const inputFin = document.getElementById('responsavel_financeiro');
    const datalist = document.getElementById('lista_pacientes');

    // Armazena os pacientes encontrados para acesso rápido sem depender do DOM
    let pacientesMap = {};
    let timeout = null;

    if (inputNome) {
        inputNome.addEventListener('input', function() {
            const termo = this.value;

            // 1. Tenta encontrar no mapa de memória (Preenchimento)
            if (pacientesMap[termo]) {
                const p = pacientesMap[termo];
                inputCpf.value = p.cpf || '';
                inputResp.value = p.resp || '';
                inputFin.value = p.fin || '';

                // --- LÓGICA NOVA: Seleciona o Radio Button da Origem ---
                // Limpa seleções anteriores
                const radios = document.getElementsByName('origem');
                radios.forEach(r => r.checked = false);

                // Se houver origem salva, marca o radio correspondente
                if (p.origem) {
                    // Tenta encontrar o radio com o valor igual ao do banco (ex: "Organico", "Marketing")
                    // A busca é feita ignorando maiúsculas/minúsculas para ser mais segura
                    for (let r of radios) {
                        if (r.value.toLowerCase() === p.origem.toLowerCase()) {
                            r.checked = true;
                            break;
                        }
                    }
                }
                // -------------------------------------------------------

                // Feedback visual de sucesso
                inputNome.style.borderColor = '#1cc88a'; // Verde
                return;
            } else {
                inputNome.style.borderColor = ''; // Reseta cor
            }

            // 2. Lógica de Busca na API
            clearTimeout(timeout);
            if (termo.length < 3) return;

            timeout = setTimeout(() => {
                fetch('<?= URL_BASE ?>/api/pacientes/busca?term=' + encodeURIComponent(termo))
                    .then(response => {
                        if (!response.ok) throw new Error('Erro na requisição');
                        return response.json();
                    })
                    .then(data => {
                        datalist.innerHTML = '';
                        pacientesMap = {}; // Limpa o mapa anterior

                        if (Array.isArray(data)) {
                            data.forEach(p => {
                                // Popula o mapa para acesso rápido
                                pacientesMap[p.nome_p] = p;

                                // Cria a opção visual
                                const option = document.createElement('option');
                                option.value = p.nome_p;

                                const origemLabel = p.origem === 'historico' ? '[Histórico]' : '[Cadastrado]';
                                const cpfLabel = p.cpf ? ` - CPF: ${p.cpf}` : '';
                                option.label = `${origemLabel} ${p.nome_p}${cpfLabel}`;

                                datalist.appendChild(option);
                            });
                        }
                    })
                    .catch(error => console.error('Erro na busca:', error));
            }, 300);
        });
    }

    // --- 2. Adicionar Sessões ---
    const btnAdd = document.getElementById('btnAddSessao');
    const container = document.getElementById('container-sessoes');
    let contador = 1;
    if (btnAdd) {
        btnAdd.addEventListener('click', function() {
            contador++;
            const div = document.createElement('div');
            div.className = 'mb-2 input-group sessao-item fade-in';
            div.innerHTML = `
                <span class="input-group-text bg-white text-secondary fw-bold">${contador}ª</span>
                <input type="date" class="form-control" name="sessoes[]">
                <button type="button" class="btn btn-outline-danger btn-remove-sessao"><i class="fas fa-times"></i></button>
            `;
            container.appendChild(div);
        });
        container.addEventListener('click', e => {
            if (e.target.closest('.btn-remove-sessao')) e.target.closest('.sessao-item').remove();
        });
    }

    // --- 3. Máscara Valor ---
    const inputVal = document.getElementById('valor');
    if (inputVal) inputVal.addEventListener('input', e => {
        let v = e.target.value.replace(/\D/g, '');
        v = (v / 100).toFixed(2) + '';
        v = v.replace(".", ",").replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.");
        e.target.value = v;
    });
</script>

