<!-- SCRIPT PARA PREENCHER O MODAL -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var modalPagamento = document.getElementById('modalPagamento');
        modalPagamento.addEventListener('show.bs.modal', function (event) {
            // Botão que acionou o modal
            var button = event.relatedTarget;
            
            // Extrai dados dos atributos data-*
            var id = button.getAttribute('data-id');
            var paciente = button.getAttribute('data-paciente');
            var valor = button.getAttribute('data-valor');

            // Atualiza os inputs do modal
            document.getElementById('modal_id_token').value = id;
            document.getElementById('modal_paciente').value = paciente;
            document.getElementById('modal_valor').value = valor;
        });
    });
</script>